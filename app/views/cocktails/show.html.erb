<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @cocktail.name %>
    <span>
      <%= link_to edit_cocktail_path(@cocktail) do %>
        <i class="far fa-edit"></i>
      <% end %>
    </span>
  </h3>

  <ul class="list-group">
      <% @cocktail.ingredients.each do |ingredient| %>
    <li class="list-group-item">
      <%= ingredient.doses.first.description %> <%= ingredient.name %>

      <%= link_to dose_path(ingredient.doses.first.id), data: {:confirm => 'Do you want to delete this dose ?'}, :method => :delete do%>
      <i class="fas fa-trash-alt"></i>
      <% end %>
    </li>
    <% end %>
    <li class="list-group-item">
      <%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail) %>
    </li>
  </ul>


  <%= link_to 'View all cocktails', cocktails_path, class: "btn btn-success" %>
</div>

