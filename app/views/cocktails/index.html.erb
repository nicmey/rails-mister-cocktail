<p id="notice"><%= notice %></p>

<div class="container">
  <h1>Cocktails</h1>
  <%= link_to 'New Cocktail', new_cocktail_path, class: "btn btn-primary"%>

  <div class="row">
    <% @cocktails.each do |cocktail| %>
    <div class="cocktail-wrapper col-xs-4">
      <div class="cocktail-background">
        <h2><%= cocktail.name %></h2>
        <%= link_to 'View details', cocktail_path(cocktail) %>
      </div>
    </div>
    <% end %>
  </div>


</div>
